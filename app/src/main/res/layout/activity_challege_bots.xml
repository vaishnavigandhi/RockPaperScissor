<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallegeBots">

    <ImageView
        android:id="@+id/iv_me"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_cpu1"
        android:layout_below="@id/iv_me"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_cpu2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_cpu1"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/rock"
        android:layout_width="match_parent"
        android:layout_below="@id/iv_cpu2"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ROCK" />

    <Button
        android:id="@+id/paper"
        android:layout_width="match_parent"
        android:layout_below="@id/rock"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PAPER" />

    <Button
        android:id="@+id/scissor"
        android:layout_below="@id/paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="SCISSOR" />


</RelativeLayout>